    <div>
        <table border="0" cellpadding="0" cellspacing="0" height="100%" width="100%" style="background: #f7f7f7; border-collapse: collapse;">
            <tbody>
                <tr>
                    <td align="center" style="font-family: Arial,sans-serif;">
                        <table border="0" cellpadding="0" cellspacing="0" style="width: 90%; border-radius: 25px; background: #fff; margin: 2% auto; box-shadow: 5px 5px 20px rgba(121, 125, 128, .3)">
                            <tbody>
                                <tr>
                                    <td  style="padding-top: 20px; padding-bottom: 20px; background: rgba(92, 174, 230, .5); border-radius: 25px 25px 0 0">
                                        <a href="{{ link_plataforma }}" style="padding: 0;margin-left: 27px;">
                                            <img src="{{ logo }}" height="100" width="300" style="height: auto; width: 175px; position: relative; left: 1rem" alt="">
