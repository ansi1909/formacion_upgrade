{% extends '::'~app.session.get('empresa').plantilla %}

{% block stylesheets %}
    {{ parent() }}
    
{% endblock %}

{% block body %}

<div class="card_noticia-detalle">
    <div class="row align-items-center justify-content-center">
       <div class="col-xs-6 col-sm-6 col-md-6 col-6 col-lg-6 col-xl-6 px-0">
           <div class="header-titulo">
               <div class="row">
                   <div class="col-12 col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                       <h2 class="titulo-detalle">{{ noticia.titulo }}</h2>
                   </div>
               </div>
               <div class="row">
                   <div class="col-6 offset-2 
                               col-xs-6 offset-xs-2 
                               col-sm-6 offset-sm-2 
                               col-md-6 offset-md-2 
                               col-lg-6 offset-lg-2 
                               col-xl-6 offset-xl-2">
                       <span class="fecha-detalle">{{ noticia.FechaPublicacion|date("d/m/Y") }}</span>
                   </div>
               </div>
           </div>
       </div>
       <div class="col-xs-6 col-sm-6 col-md-6 col-6 col-lg-6 col-xl-6 px-0">
           <div class="header-img">
               {% set img = uploads~noticia.imagen %}
               <img src="{{ img }}" alt="" class="img-detalle">
           </div>
       </div>
    </div>
    <div class="noticia_detalle-cont">
        <div class="row align-items-center justify-content-center">
            <div class="col-12 col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 text-justify">
                <p class="text-detalle">
                     {{ noticia.contenido|raw }}
                </p>
            </div>
        </div>
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 mt-6 my-sm-5 mt-sm-0 text-center" >
                            {% if noticia.pdf %}
                                {% set pdf = uploads~noticia.pdf %}

                            
                            
                                    <a href="{{ pdf }}" target="_blank" > 
                                        <button type="button" class="btn btn-primary bttnDownl " id="{{noticia.id}}">
                                          <i class="material-icons" >cloud_download</i>
                                        </button>
                                        <div class="tooltipN"><div class="tiparrow"></div><p class="textTooltip">{{ 'Descargar'|trans }}&nbsp;:&nbsp;{{noticia.titulo}}.pdf</p></div>
                                    </a>
                            {% endif %}
       </div>
        <div class="row align-items-center justify-content-end">
            <div class="col-6 col-xs-6 col-sm-6 col-md-6 col-lg-6 col-xl-6 text-right">
                <a href="{{ path('_noticias') }}" class="lnk-volver"><span class="material-icons ic-bck">arrow_back</span>{{ 'Volver a noticias'|trans }}</a>
            </div>
        </div>
    </div>
    {% if noticias|length > 0 %}
        <div class="noticia_detalle-catag">
            <div class="row">
                <div class="col-12 col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                    <h4 class="mt-3 pt-3 mb-0 pb-1 title-grey sub-line ">{{ 'Otras noticias'|trans }}</h4>
                </div>
            </div>
            <div class="row">
                <div class="cards-section container d-flex justify-content-between justify-content-sm-center flex-wrap mt-3">
                {% for noticia in noticias %}
                    <div class="col-4 col-lg-4 col-xl-4 col-md-6 col-sm-6 col-xs-6">
                        <a href="{{ path('_noticiaDetalle', { 'noticia_id': noticia.id}) }}">
                            <div class="card-anuncio">
                                <div class="card_header">
                                    {% set img = uploads~noticia.imagen %}
                                    <img class="card_img" src="{{img}}" alt="Card image cap">
                                </div>
                                <div class="card_body">
                                    <h5 class="titulo_anuncio">{{ noticia.titulo }}</h5>
                                </div>
                                <div class="card_footer">
                                    <hr class="separador">
                                    <div class="row mb-3">
                                        <div class="col-5 offset-1
                                                    col-lg-5 offset-lg-1 
                                                    col-xl-5 offset-xl-1 
                                                    col-md-5 offset-md-1 
                                                    col-sm-5 offset-sm-1 
                                                    col-xs-5 offset-xs-1 
                                                    px-0">
                                            <span class="fecha_anuncio">{{ noticia.FechaPublicacion|date("d/m/Y") }}</span>
                                        </div>
                                        <div class="col-5 
                                                    col-lg-5 
                                                    col-xl-5 
                                                    col-md-5 
                                                    col-sm-5 
                                                    col-xs-5 
                                                    text-right 
                                                    px-0">
                                            <span class="tipo_anuncio{{noticia.tipoNoticia.id}}">{{ noticia.tipoNoticia.nombre }}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
            $('#notiNove').addClass("active");
        });
    </script>
    <script type="text/javascript" src="{{ asset('js/front/programa_inicio.js') }}"></script> 
{% endblock %}