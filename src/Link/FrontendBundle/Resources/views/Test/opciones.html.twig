{% if tipo_elemento_pregunta == tipo_elemento.texto %}
    {% set literal = ['a','b','c','d','e','f','g','h','i','j','k','l','m','n','o','p','q','r','s','t','u','v','w','x','y','z'] %}
    {% for opcion in opciones %}
        <div class="row justify-content-center">
            <div class="col-8 offset-2 pdg">
                <div class="opc" data="{{ tipo_elemento_pregunta }}_{{ tipo_pregunta }}_{{ opcion.po_id }}">
                    <div class="text-center opc_letra">
                        <span class="opc_l">{{ literal[loop.index0] }}</span>
                    </div>
                    <div class="opc_resp">
                        <span class="opc_r">{{ opcion.descripcion }}</span>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% else %}
    {# Dibujar las opciones de im√°genes #}
    {% for opcion in opciones %}
        {% if loop.first %}
            <div class="row">
        {% endif %}
        <div class="col-4">
            <div class="opc_img" data="{{ tipo_elemento_pregunta }}_{{ tipo_pregunta }}_{{ opcion.po_id }}">
                {% set img = uploads~opcion.imagen %}
                <img class="opc_i-3" src="{{ img }}" alt="">
            </div>
        </div>
        {% if loop.index is divisibleby(3) %}
            </div>
            {% if not loop.last %}
                <div class="row">
            {% endif %}
        {% else %}
            {% if loop.last %}
                </div>
            {% endif %}
        {% endif %}
    {% endfor %}
{% endif %}
