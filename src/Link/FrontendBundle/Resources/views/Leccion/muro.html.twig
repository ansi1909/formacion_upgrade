<div class="comment">
    <div class="comm-header d-flex align-items-center mb-2">
        {% set img_user = muro.foto ? uploads~muro.foto : asset('front/assets/img/user-default.png') %}
        <img src="{{ img_user }}" alt="">
        <div class="wrap-info-user flex-column ml-2">
            <div class="name text-xs color-dark-grey">{{ muro.usuario }}</div>
            <div class="date text-xs color-grey">{{ muro.cuando }}</div>
        </div>
    </div>
    <div class="comm-body">
        <p>{{ muro.mensaje }}</p>
    </div>
    <div class="comm-footer d-flex justify-content-between align-items-center">
        <a href="#" class="mr-0 text-sm color-light-grey">
            <i class="material-icons mr-1 text-sm color-light-grey">thumb_up</i> 3
        </a>
        <a href="#" class="links text-right text-xs reply_comment" data="{{ muro.id }}">{{ 'Responder'|trans }}</a>
    </div>
    <div class="response d-flex align-items-center justify-content-between" style="display:none;">
        {% set img_me = app.session.get('usuario').foto is not null and app.session.get('usuario').foto != '' ? uploads~app.session.get('usuario').foto : asset('front/assets/img/user-default.png') %}
        <img src="{{ img_me }}" alt="">
        <form class="mt-3" id="form-reply" method="POST">
            <input type="hidden" id="muro_id" name="muro_id" value="{{ muro.id }}">
            <div class="form-group">
                <textarea class="form-control" id="respuesta" name="respuesta" rows="5" placeholder="{{ 'Escriba su respuesta'|trans }}"></textarea>
            </div>
            <button type="button" name="button" class="btn btn-sm btn-primary float-right" id="button-reply">{{ 'Responder'|trans }}</button>
        </form>
    </div>
    <div id="respuestas">
        {% for submuro in muro.submuros %}
            <div class="comment replied">
                <div class="comm-header d-flex align-items-center mb-2">
                    {% set img_user = submuro.foto ? uploads~submuro.foto : asset('front/assets/img/user-default.png') %}
                    <img src="{{ img_user }}" alt="">
                    <div class="wrap-info-user flex-column ml-2">
                        <div class="name text-xs color-dark-grey">{{ submuro.usuario }}</div>
                        <div class="date text-xs color-grey">{{ submuro.cuando }}</div>
                    </div>
                </div>
                <div class="comm-body">
                    <p>{{ submuro.mensaje }}</p>
                </div>
                <div class="comm-footer d-flex justify-content-between align-items-center">
                    <a href="#" class="mr-0 text-sm color-light-grey">
                        <i class="material-icons mr-1 text-sm color-light-grey">thumb_up</i> 3
                    </a>
                </div>
                <a href="#" class="links text-center d-block">{{ 'Ver más repuestas'|trans }}</a>
            </div>
        {% endfor %}
    </div>
</div>
<a href="#" class="links text-center d-block">{{ 'Ver más comentarios'|trans }}</a>