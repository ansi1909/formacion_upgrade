{% extends '::admin.html.twig' %}

{% block body %}
<input type="hidden" id="url_list" name="url_list" value="{{ path('_participantes', { 'app_id': app.session.get('app_id') }) }}">
<br><br>
<div class="row align-items-center justify-content-between">
    <div class="col text-left">
        <a href="{{ path('_participantes', { 'app_id': app.session.get('app_id') })}}" class="bttn__bck"><span class="fa fa-clipboard" style="margin-top: 8px;"></span><span class="text__bck">{{ 'Ir al listado'|trans }}</span></a>
    </div>
    <div class="col-sm-8 col-md-8 col-lg-8 alert alert-danger" role="alert" id="div-error" style="display:none;">
        <ul></ul>
    </div>
</div>
<div class="row">
    <div class="col-sm-16 col-md-16 col-lg-16 col-xl-16">
        <div class="card">
            <div class="card-header"  style=" background: linear-gradient(to right, #d5ff00 0%, #A3C300 100%); ">
                <h5 class="card-title">{{ 'Carga masiva de participantes de la empresa'|trans }} {{ empresa.nombre }}</h5>
            </div>
            <div class="card-block">
                <div class="row" style="margin-bottom: 0px;">
                    <div class="col-sm-8 col-md-8 col-lg-8 offset-sm-4 offset-md-4 offset-lg-4" style="margin-bottom: 0px;">
                        <div class="alert alert-success" role="alert">
                        {% if error %}
                            <h4 class="alert-heading">{{ error }}</h4>
                        {% else %}
                            <h4 class="alert-heading">{{ 'Archivo procesado con Ã©xito'|trans }}!</h4>
                            <p>{{ 'Registros nuevos'|trans }}: <b>{{ return.inserts }} {{ 'participantes'|trans }}</b>.</p>
                            <p>{{ 'Registros actualizados'|trans }}: <b>{{ return.updates }} {{ 'participantes'|trans }}</b>.</p>
                        {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="col-sm-16 col-md-16 text-right">
                    <button type="button" class="bttn__save" id="list"><span class="text__save">{{'Aceptar'|trans}}</span><span class="fa fa-check"></span></button>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
