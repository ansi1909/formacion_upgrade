{% extends '::admin.html.twig' %}

{% block body %}
<br>

<div class="row align-items-center justify-content-between">
    <div class="col-12 col-sm-12 page-title">
        <h3>{{ 'Usuarios'|trans }}</h3>
    </div>
    <div class="col text-right">
        <button type="button" class="bttn__nr new" data-toggle="modal" data-target="#formModal"><span class="fa fa-plus"></span><span class="text__nr">{{ 'Nuevo Registro'|trans }}</span></button>
    </div>
</div>
<div class="row">
    <div class="col-sm-16">
        <div class="card">
            <div class="card-header gradiente">
                <h5 class="card-title">{{ 'Listado de Usuarios'|trans }}</h5>
            </div>
            <div class="card-block">
                <div class="row" id="div-active-alert" style="display:none;">
                    <div class="col-sm-2">
                        &nbsp;
                    </div>
                    <div class="col-sm-12">
                        <div class="alert alert-danger" role="alert"> 
                            <strong>{{ 'Error en el servidor'|trans }}!</strong> <span id="active-error">{{ 'Ha ocurrido un error en el servidor. Contacte al administrador del sistema.'|trans }}.</span>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        &nbsp;
                    </div>
                </div>
                <table class="table" id="dt">
                    <thead class="sty__title">
                        <tr>
                            <th>{{ 'Nombre'|trans }}</th>
                            <th>{{ 'Apellido'|trans }}</th>
                            <th>Login</th>
                            <th>{{ 'Empresa'|trans }}</th>
                            <th>{{ 'Nivel'|trans }}</th>
                            <th>{{ 'Roles'|trans }}</th>
                            <th>{{ 'Activo'|trans }}</th>
                            <th>{{ 'Acciones'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for usuario in usuarios %}
                            {% set eo = cycle(['odd', 'even'], loop.index) %}
                            <tr class="{{ eo }}">
                                <td>{{ usuario.nombre }}</td>
                                <td>{{ usuario.apellido }}</td>
                                <td>{{ usuario.login }}</td>
                                <td>{{ usuario.empresa }}</td>
                                <td>{{ usuario.nivel }}</td>
                                <td>
                                    <div class="tree">
                                        <ul data-jstree='{ "opened" : true }'>
                                            {% for rol in usuario.roles %}
                                                <li data-jstree='{ "icon": "fa fa-angle-double-right" }'>{{ rol.rol.nombre }}</li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </td>
                                <td class="center">
                                    <div class="can-toggle demo-rebrand-2 small">
                                        <input id="f{{ usuario.id }}" class="cb_activo" type="checkbox" {% if usuario.activo %}checked{% endif %}>
                                        <label for="f{{ usuario.id }}">
                                            <div class="can-toggle__switch" data-checked="{{ 'Si'|trans }}" data-unchecked="No"></div>
                                        </label>
                                    </div>
                                </td>
                                <td class="center">
                                    <a href="{{ path('_usuario', { 'usuario_id': usuario.id }) }}" class="btn btn-link btn-sm"><span class="fa fa-pencil"></span></a>
                                    <a href="#" class="btn btn-link btn-sm {% if usuario.delete_disabled == '' %}delete{% endif %} {{ usuario.delete_disabled }}" data="{{ usuario.id }}"><span class="fa fa-trash"></span></a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('assets/vendor/jstree/dist/jstree.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/admin/usuarios.js') }}"></script>
{% endblock %}
