{% extends '::admin.html.twig' %}

{% block body %}
<br>

<div class="row align-items-center justify-content-between">
    <div class="col-12 col-sm-12 page-title">
        <h3>{{ 'Permisos de Acceso'|trans }}</h3>
    </div>
</div>
<div class="row">
    <div class="col-sm-16">
        <div class="card">
            <div class="card-header gradiente">
                <h5 class="card-title">{{ 'Permisos por Rol'|trans }}</h5>
            </div>
            <div class="card-block">
                <table class="table ">
                    <thead>
                        <tr>
                            <th>{{ 'Rol'|trans }}</th>
                            <th>{{ 'Aplicaciones a la que tiene acceso'|trans }}</th>
                            <th>{{ 'Acciones'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for permiso in permisos %}
                            {% set eo = cycle(['odd', 'even'], loop.index) %}
                            <tr class="{{ eo }}">
                                <td>{{ permiso.rol_nombre }}</td>
                                <td>
                                    <table>
                                        <tbody>
                                            {% for aplicacion in permiso.aplicaciones %}
                                                <tr class="{{ eo }}">
                                                    <td>{{ aplicacion.nombre }}</td>
                                                </tr>
                                                {% for subaplicacion in aplicacion.subaplicaciones %}
                                                    <tr class="{{ eo }}">
                                                        <td>
                                                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<p class="fa fa-arrow-right"> {{ subaplicacion.nombre }}</p>
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                            {% else %}
                                                <tr class="{{ eo }}">
                                                    <td>{{ 'Este rol a√∫n no tiene permisos de acceso'|trans }}</td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </td>
                                <td class="center">
                                    <a href="#" class="btn btn-link btn-sm edit" data-toggle="modal" data-target="#formModal" data=""><span class="fa fa-pencil"></span></a>
                                    <a href="#" class="btn btn-link btn-sm" data=""><span class="fa fa-trash"></span></a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

{% endblock %}
