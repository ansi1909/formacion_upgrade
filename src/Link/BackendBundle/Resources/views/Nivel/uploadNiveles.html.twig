{% extends '::admin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('fancybox/jquery.fancybox.css') }}" rel="stylesheet" />
    <style>
        .input-group-addon{padding:0px;}
        .input-group .form-control {
            z-index: 1;
        }
        .sty__title {
            padding: 2px 5px;
            box-shadow: 0px 3px 10px rgba(51, 51, 51, 0.5);
            font-weight: bold;
        }
    </style>
{% endblock %}

{% block body %}
{% set uri = app.request.getbasepath %}
<input type="hidden" id="url_list" name="url_list" value="{{ path('_empresasNiveles', { 'app_id': app.session.get('app_id') }) }}">
<br><br>
<div class="row align-items-center justify-content-between">
    <div class="col text-left">
        <a href="{{ path('_empresasNiveles', { 'app_id': app.session.get('app_id') })}}" class="bttn__bck"><span class="fa fa-clipboard" style="margin-top: 8px;"></span><span class="text__bck">{{ 'Ir al listado'|trans }}</span></a>
    </div>
</div>
<form id="form" name="form" action="{{ path('_uploadNiveles', { 'empresa_id': empresa.id }) }}" class="container-fluid p-0" method="POST" enctype="multipart/form-data">
    <div class="row">
        <div class="col-sm-16">
            <div class="card">
                <div class="card-header"  style=" background: linear-gradient(to right, #d5ff00 0%, #A3C300 100%); ">
                    <h5 class="card-title">{{ 'Subir Archivo de Niveles' |trans}} {{ empresa.nombre }}</h5>
                </div>
                <div class="card-block" style=" padding-bottom:45px; ">
                    <div class="row">
                        <div class="col-sm-3 col-md-3 col-lg-3">
                            &nbsp;
                        </div>
                        <div class="col-sm-7 col-md-7 col-lg-7">
                            <input type="text" class="form-control" name="file" id="file" value="" readonly="readonly" placeholder="{{ 'Sólo archivos con extensión xls o xlsx'|trans }}">
                        </div>
                        <div class="col-sm-3 col-md-3 col-lg-3">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <a href="{{ uri }}/jq/ResponsiveFilemanager/filemanager/dialog.php?type=2&field_id=file&fldr=recursos/niveles" class="btn iframe-btn" type="button">
                                        <span class="fa fa-file-excel-o"></span>
                                    </a>
                                </span>
                            </div>
                        </div>
                        <div class="col-sm-3 col-md-3 col-lg-3">
                            &nbsp;
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="col-sm-16 col-md-16 text-right">
                        <button type="submit" id="save" class="bttn__saved edit" data-toggle="tooltip" data-placement="bottom" title="{{ 'Procesar'|trans }}"><span class="fa fa-upload"></span></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('jq/jquery-validation-1.15.0/dist/jquery.validate.js') }}"></script>
    <script type="text/javascript" src="{{ asset('fancybox/jquery.fancybox.pack.js') }}"></script>
    <script type="text/javascript">

        $('#finish').click(function(){
            var valid = $("#form").valid();
            if (!valid) 
            {
                notify($('#div-error').html());
            }
            else {

                // Validaciones adicionales
                var roles = $('#roles').val();
                var empresa_id = $('#empresa_id').val();
                var nivel_id = $('#nivel_id').val();
                var roles_empresa_str = $('#roles_empresa_str').val();
                var usuario_id = $('#usuario_id').val();
                var login = $('#login').val();

                for (i=0; i<roles.length; i++)
                {
                    if ((roles_empresa_str.indexOf(roles[i]) >= 0) && (empresa_id == 0 || nivel_id == 0))
                    {
                        valid = false;
                    }
                }

                if (!valid){
                    $('#div-error ul').html("<li>- {{ 'Debe seleccionar tanto la empresa como el nivel.'|trans }}</li>");
                    $('#div-error ul').show();
                    notify($('#div-error').html());
                }
                else {

                    // Validar si el login no existe cuando es un usuario nuevo
                    if (!usuario_id)
                    {
                        $.ajax({
                            type: "POST",
                            url: $('#url_login').val(),
                            async: true,
                            data: { login: login },
                            dataType: "json",
                            success: function(data) {
                                if (data.ok != 0)
                                {
                                    $('#div-error ul').html("<li>- {{ 'El login ya existe.'|trans }}</li>");
                                    $('#div-error ul').show();
                                    notify($('#div-error').html());
                                }
                                else {
                                    $('#form').submit();
                                }
                            },
                            error: function(){
                                $('#div-error ul').html("<li>- {{ 'Ha ocurrido un error en la validación del usuario.'|trans }}</li>");
                                $('#div-error ul').show();
                                notify($('#div-error').html());
                            }
                        });
                    }
                    else {
                        $('#form').submit();
                    }
                }

            }
        });

        $("#form").validate({
            errorLabelContainer: "#div-error ul",
            wrapper: "li",
            ignore: "",
            rules: {
                'nombre': {
                    required: true,
                    minlength: 3
                },
                'apellido': {
                    required: true,
                    minlength: 3
                },
                'login': {
                    required: true,
                    minlength: 3
                },
                'clave': {
                    required: {
                        depends: function(element) {
                            return $("#cambiar").is(":checked") || $('#usuario_id').val() == '';
                        }
                    }
                },
                'correo_personal': {
                    email: true
                },
                'fecha_nacimiento': {
                    required: true
                },
                'correo_corporativo': {
                    email: true
                },
                'roles[]': {
                    required: true,
                    minlength: 1
                }
            },
            messages: {
                'nombre': {
                    required: "- {{ 'El nombre del usuario es requerido.'|trans }}",
                    minlength: "- {{ 'El nombre del usuario debe ser mínimo de 3 caracteres.'|trans }}"
                },
                'apellido': {
                    required: "- {{ 'El apellido del usuario es requerido.'|trans }}",
                    minlength: "- {{ 'El apellido del usuario debe ser mínimo de 3 caracteres.'|trans }}"
                },
                'login': {
                    required: "- {{ 'El campo usuario es requerido.'|trans }}",
                    minlength: "- {{ 'El campo usuario debe ser mínimo de 3 caracteres.'|trans }}"
                },
                'clave': {
                    required: "- {{ 'La clave es requerida.'|trans }}"
                },
                'correo_personal': {
                    email: "- {{ 'El correo personal tiene un formato inválido.'|trans }}"
                },
                'fecha_nacimiento': {
                    required: "- {{ 'Fecha de nacimiento es requerida.'|trans }}"
                },
                'correo_corporativo': {
                    email: "- {{ 'El correo corporativo tiene un formato inválido.'|trans }}"
                },
                'roles[]': {
                    required: "- {{ 'Debe seleccionar al menos un rol.'|trans }}",
                    minlength: "- {{ 'Debe seleccionar al menos un rol.'|trans }}"
                }
            }
        });

    </script>
    <script type="text/javascript" src="{{ asset('js/admin/upload.js') }}"></script>
{% endblock %}