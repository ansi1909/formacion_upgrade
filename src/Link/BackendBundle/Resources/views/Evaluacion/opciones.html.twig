{% extends '::admin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('fancybox/jquery.fancybox.css') }}" rel="stylesheet" />
    <style>
        .input-group-addon{padding:0px;}
        .input-group .form-control {
            z-index: 1;
        }
        .input-group {
            margin-top: 35px;
        }
    </style>
{% endblock %}

{% block body %}
<br>
<input type="hidden" id="url_edit" name="url_edit" value="{{ path('_ajaxEditOpcion') }}">
<input type="hidden" id="url_list" name="url_list" value="{{ path('_preguntas', { 'prueba_id': pregunta.prueba.id }) }}">
<input type="hidden" id="url_next" name="url_next" value="{{ path('_editPregunta', { 'prueba_id': pregunta.prueba.id, 'pregunta_id': 0, 'cantidad': cantidad, 'total': total }) }}">
<div class="row align-items-center justify-content-start">
    <div class="col-12 col-sm-12 page-title">
        <h3>{{ 'Configuración de la evaluación'|trans }} {{ pregunta.prueba.nombre }}</h3>
    </div>
</div>
<div class="row align-items-center justify-content-between">
    <div class="col text-left">
        <a href="{{ path('_preguntas', { 'prueba_id': pregunta.prueba.id })}}" class="bttn__bck2"><span class="fa fa-list-ol"></span><span class="text__bck2">{{ 'Ir al listado de preguntas'|trans }}</span></a>
    </div>
    <div class="col text-right">
        <button type="button" class="bttn__nr new" data-toggle="modal" data-target="#formModal"><span class="fa fa-plus"></span><span class="text__nr">{{ 'Agregar opción'|trans }}</span></button>
    </div>
</div>
<div class="row">
    <div class="col-sm-16 col-md-16 col-lg-16 col-xl-16">
        <div class="card">
            <div class="card-header gradiente">
                <h5 class="card-title">{{ 'Opciones de la pregunta'|trans }} {{ pregunta.enunciado }}</h5>
            </div>
            <div class="card-block fnd__wzd">
                <div class="row" id="div-active-alert" style="display:none;">
                    <div class="col-sm-2">
                        &nbsp;
                    </div>
                    <div class="col-sm-12">
                        <div class="alert alert-danger" role="alert"> 
                            <strong>{{ 'Error en el servidor'|trans }}!</strong> <span id="active-error">{{ 'Ha ocurrido un error en el servidor. Contacte al administrador del sistema.'|trans }}.</span>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        &nbsp;
                    </div>
                </div>
                <table class="table">
                    {% if not es_asociacion %}
                        <thead class="sty__title">
                            <tr>
                                <th class="hd__title">{{ 'Opción'|trans }}</th>
                                <th class="hd__title">{{ 'Imagen'|trans }}</th>
                                <th class="hd__title">{{ 'Correcta'|trans }}</th>
                                <th class="hd__title">{{ 'Acciones'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody id="tbody-options">
                            {% for po in opciones %}
                                {% set eo = cycle(['odd', 'even'], loop.index) %}
                                <tr class="{{ eo }}">
                                    <td>{{ po.descripcion }}</td>
                                    <td>
                                        {% if po.imagen != '' %}
                                            {% set img = uploads~po.imagen %}
                                            <img src="{{ img }}" alt="" class="img__opc">
                                        {% else %}
                                            &nbsp;
                                        {% endif %}
                                    </td>
                                    <td class="center">
                                        <div class="can-toggle demo-rebrand-2 small">
                                            <input id="f{{ po.id }}" class="cb_activo" type="checkbox" {% if po.correcta %}checked{% endif %}>
                                            <label for="f{{ po.id }}">
                                                <div class="can-toggle__switch" data-checked="{{ 'Si'|trans }}" data-unchecked="No"></div>
                                            </label>
                                        </div>
                                    </td>
                                    <td class="center">
                                        <a href="#" title="{{ 'Editar'|trans }}" class="btn btn-link btn-sm edit" data-toggle="modal" data-target="#formModal" data="{{ po.id }}"><span class="fa fa-pencil"></span></a>
                                        <a href="#" title="{{ 'Eliminar'|trans }}" class="btn btn-link btn-sm {% if po.delete_disabled == '' %}delete{% endif %} {{ po.delete_disabled }}" data="{{ po.id }}"><span class="fa fa-trash"></span></a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    {% else %}
                        <thead class="sty__title">
                            <tr>
                                <th class="hd__title">{{ 'Lado'|trans }} A</th>
                                <th class="hd__title">{{ 'Lado'|trans }} B</th>
                                <th class="hd__title">{{ 'Acciones'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody id="tbody-options">
                            {% for po in opciones %}
                                {% set eo = cycle(['odd', 'even'], loop.index) %}
                                <tr class="{{ eo }}">
                                    <td>
                                        <div class="row">
                                            <div class="col-md-4 col-sm-4 col-lg-4 col-xl-4 offset-xl-1 offset-lg-1 offset-md-1 offset-sm-1">
                                                {{ po.pregunta }}
                                            </div>
                                            <div class="col-md-4 col-sm-4 col-lg-4 col-xl-4">
                                                {% if po.imagen_pregunta != '' %}
                                                    {% set img = uploads~po.imagen_pregunta %}
                                                    <img src="{{ img }}" alt="" class="img__opc">
                                                {% else %}
                                                    &nbsp;
                                                {% endif %}
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="row">
                                            <div class="col-md-4 col-sm-4 col-lg-4 col-xl-4 offset-xl-1 offset-lg-1 offset-md-1 offset-sm-1">
                                                {{ po.opcion }}
                                            </div>
                                            <div class="col-md-4 col-sm-4 col-lg-4 col-xl-4">
                                                {% if po.imagen_opcion != '' %}
                                                    {% set img = uploads~po.imagen_opcion %}
                                                    <img src="{{ img }}" alt="" class="img__opc">
                                                {% else %}
                                                    &nbsp;
                                                {% endif %}
                                            </div>
                                        </div>
                                    </td>
                                    <td class="center">
                                        <a href="#" title="{{ 'Editar'|trans }}" class="btn btn-link btn-sm edit" data-toggle="modal" data-target="#formModal" data="{{ po.id }}"><span class="fa fa-pencil"></span></a>
                                        <a href="#" title="{{ 'Eliminar'|trans }}" class="btn btn-link btn-sm {% if po.delete_disabled == '' %}delete{% endif %} {{ po.delete_disabled }}" data="{{ po.id }}"><span class="fa fa-trash"></span></a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    {% endif %}
                </table>
            </div>
            <div class="card-footer" style="background: #e6e6e6;">
                <div class="col-sm-16 text-right">
                    {% if cantidad > total %}
                        <button type="button" class="bttn__end" id="list"><span class="text__end">{{ 'Finalizar'|trans }}</span><span class="fa fa-check"></span></button>
                    {% else %}
                        <button type="button" class="bttn__end" id="next"><span class="text__end">{{ 'Continuar'|trans }}</span><span class="fa fa-chevron-right"></span></button>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block formModal %}
    <div class="modal-header gradiente">
        <h5 class="modal-title" id="formModalLabel">{{ 'Datos de la Aplicación'|trans }}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"> <span aria-hidden="true">&times;</span> </button>
    </div>
    <div class="modal-body">
        <form id="form" name="form" action="{{ path('_ajaxUpdateAplicacion') }}" method="POST">
            <input type="hidden" id="app_id" name="app_id" value="">
            <div class="form-group row justify-content-end">
                <label for="nombre" class="col-2 col-form-label">{{ 'Nombre'|trans }}:</label>
                <div class="col-14">
                    <input type="text" class="form-control form_sty1" id="nombre" name="nombre" value="">
                    <span class="fa fa-keyboard-o"></span>
                </div>
            </div>
            <div class="form-group row justify-content-end">
                <label for="url" class="col-2 col-form-label">Url:</label>
                <div class="col-14">
                    <input type="text" class="form-control form_sty1" id="url" name="url" value="">
                    <span class="fa fa-link"></span>
                </div>
            </div>
            <div class="form-group row justify-content-end">
                <label for="icono" class="col-2 col-form-label">{{ 'Icono'|trans }}:</label>
                <div class="col-14">
                    <input type="text" class="form-control form_sty1" id="icono" name="icono" value="">
                    <span class="fa fa-square"></span>
                </div>
            </div>
            <div class="form-group row justify-content-end">
                <label for="activo" class="col-4 col-form-label">{{ 'Activo'|trans }}:</label>
                <div class="col-12">
                    <div class="can-toggle demo-rebrand-2 small">
                        <input id="activo" name="activo" type="checkbox" checked>
                        <label for="activo">
                            <div class="can-toggle__switch" data-checked="{{ 'Si'|trans }}" data-unchecked="No"></div>
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group row justify-content-end">
                <label for="subaplicacion_id" class="col-4 col-form-label">{{ 'Sub-Aplicación de'|trans }}:</label>
                <div class="col-12">
                    <select class="form-control form_sty_sm" id="subaplicacion_id" name="subaplicacion_id" style="border-radius: 5px;">
                    </select>
                    <span class="fa fa-dedent"></span>
                </div>
            </div>
        </form>
        <div class="alert alert-success" role="alert" id="alert-success" style="display:none;"> 
            <strong>{{ 'Bien hecho'|trans }}!</strong> {{ 'La aplicación ha sido almacenada con éxito'|trans }}. 
        </div>
        <div class="card" id="detail" style="display:none;">
            <div class="card-header" style="background: linear-gradient(to right, #0084db 0%, #00558D 100%);">
                <h4 class="card-title" style="color: #fff; text-transform: uppercase">Datos Básicos</h4>
            </div>
            <div class="card-block">
                <div class="container">
                    <div class="row justify-content-between">
                        <div class="col-sm-16 col-md-16 show__details">
                            <h5>{{ 'Nombre'|trans }}:</h5>
                            <p id="p-nombre">Lorem Ipsum</p>
                        </div>
                    </div>
                    <br>
                    <div class="row justify-content-between">
                        <div class="col-sm-16 col-md-16 show__details">
                            <h5>Url:</h5>
                            <p id="p-url">https://Loremipsumdolorsitamet.domain/</p>
                        </div>
                    </div>
                    <br>
                    <div class="row justify-content-between">
                        <div class="col-sm-16 col-md-16 show__details">
                            <h5>{{ 'Icono'|trans }}:</h5>
                            <p id="p-icono"><span class="fa fa-users"></span></p>
                        </div>
                    </div>
                    <br>
                    <div class="row justify-content-between">
                        <div class="col-sm-16 col-md-16 show__details">
                            <h5>{{ 'Activo'|trans }}:</h5>
                            <p id="p-activo">Si</p>
                        </div>
                    </div>
                    <br>
                    <div class="row justify-content-between" id="div-subaplicacion">
                        <div class="col-sm-16 col-md-16 show__details">
                            <h5>{{ 'Sub-Aplicación de'|trans }}:</h5>
                            <p id="p-subaplicacion">5</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="col-sm-16 col-md-16 text-right">
                    <button type="button" class="bttn__edit edit" data-toggle="tooltip" data-placement="bottom" title="{{'Editar' |trans}}" id="detail-edit" data=""><span class="fa fa-pencil"></span></button>
                    <button type="button" class="bttn__elim" data-toggle="tooltip" data-placement="bottom" title="{{'Eliminar' |trans}}" id="detail-delete" data=""><span class="fa fa-trash"></span></button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('jq/jquery-validation-1.15.0/dist/jquery.validate.js') }}"></script>
    {#<script src="{{ asset('jq/jquery-validation-1.15.0/dist/localization/messages_es.js') }}"></script>#}
    <script type="text/javascript" src="{{ asset('js/admin/aplicacion.js') }}"></script>
    <script type="text/javascript">

        jQuery.validator.addMethod("noSpace", function(value, element) { 
            return value.indexOf(" ") < 0; 
        }, "{{ 'No se permiten espacios en blanco.'|trans }}");

        $("#form").validate({
            rules: {
                'nombre': {
                    required: true,
                    minlength: 3
                },
                'url': {
                    noSpace: true
                },
                'icono': {
                    noSpace: true
                }
            },
            messages: {
                'nombre': {
                    required: "{{ 'Este campo es requerido.'|trans }}",
                    minlength: "{{ 'Debe ser mínimo de 3 caracteres.'|trans }}"
                }
            }
        });

    </script>
{% endblock %}
