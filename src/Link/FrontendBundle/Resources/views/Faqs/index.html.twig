{% extends '::'~app.session.get('empresa').plantilla %}

{% block stylesheets %}
    {{ parent() }}
    
{% endblock %}

{% block body %}

<div class="container-fluid">
    <div class="row mt-4">
        <div class="col-12 text-center">
            <h3 class="titulo_faqs">{{ 'Preguntas frecuentes'|trans }}</h3>
        </div>
    </div>
    {% for faq in faqs %}
    <section>
        <div class="row">
            <div class="col-12">
                <h4 class="mt-3 pt-3 mb-0 pb-1 title-grey sub-line subtitulo_faqs">{{ faq.nombre_categoria }}</h4>
            </div>
        </div>
        <div class="row align-items-center justify-content-center">
            <div class="col-lg-10 col-xl-10 col-md-10 col-sm-10 col-xs-10 col-10">
                <ul class="accordion">
                    {% for respuesta in faq.preguntas %}
                    <li>
                        <span class="enun_faqs"><span class="num">{{respuesta.numero}}.</span>{{respuesta.pregunta}}</span>
                        <p>{{respuesta.respuesta}} </p>
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </section>
    {% endfor %}
</div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function(){
            $('#faQs').addClass("active");
        });
    </script>
    <script type="text/javascript" src="{{ asset('front/js/acordion.js') }}"></script> 
{% endblock %}