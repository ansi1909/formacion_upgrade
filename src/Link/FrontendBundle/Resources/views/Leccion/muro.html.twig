<div class="comment">
    <div class="comm-header d-flex align-items-center mb-2">
        {% set img_user = muro.foto ? uploads~muro.foto : asset('front/assets/img/user-default.png') %}
        <img src="{{ img_user }}" alt="">
        <div class="wrap-info-user flex-column ml-2">
            <div class="name text-xs color-dark-grey">{{ muro.usuario }}</div>
            <div class="date text-xs color-grey">{{ muro.cuando }}</div>
        </div>
    </div>
    <div class="comm-body">
        <p>{{ muro.mensaje }}</p>
    </div>
    <div class="comm-footer d-flex justify-content-between align-items-center">
        <a href="#" class="mr-0 text-sm color-light-grey like" data="{{ muro.id }}">
            <i id="{{ prefix }}_i-{{ muro.id }}" class="material-icons mr-1 text-sm color-light-grey {{ muro.likes.ilike ? 'ic-lke-act' : '' }}">thumb_up</i> <span id="{{ prefix }}_like-{{ muro.id }}">{{ muro.likes.cantidad }}</span>
        </a>
        <a href="#" class="links text-right text-xs reply_comment" data="{{ muro.id }}">{{ 'Responder'|trans }}</a>
    </div>
    <div id="{{ prefix }}_div-response-{{ muro.id }}">
    </div>
    <div id="{{ prefix }}_respuestas-{{ muro.id }}">
        {% for submuro in muro.submuros %}
            <div class="comment replied">
                <div class="comm-header d-flex align-items-center mb-2">
                    {% set img_user = submuro.foto ? uploads~submuro.foto : asset('front/assets/img/user-default.png') %}
                    <img src="{{ img_user }}" alt="">
                    <div class="wrap-info-user flex-column ml-2">
                        <div class="name text-xs color-dark-grey">{{ submuro.usuario }}</div>
                        <div class="date text-xs color-grey">{{ submuro.cuando }}</div>
                    </div>
                </div>
                <div class="comm-body">
                    <p>{{ submuro.mensaje }}</p>
                </div>
                <div class="comm-footer d-flex justify-content-between align-items-center">
                    <a href="#" class="mr-0 text-sm color-light-grey like" data="{{ submuro.id }}">
                        <i id="{{ prefix }}_i-{{ submuro.id }}" class="material-icons mr-1 text-sm color-light-grey {{ submuro.likes.ilike ? 'ic-lke-act' : '' }}">thumb_up</i> <span id="{{ prefix }}_like-{{ submuro.id }}">{{ submuro.likes.cantidad }}</span>
                    </a>
                </div>
            </div>
        {% endfor %}
        {% if muro.total_respuestas > muro.submuros|length %}
            <input type="hidden" id="{{ prefix }}_more_answers-{{ muro.id }}" name="{{ prefix }}_more_answers-{{ muro.id }}" value="0">
            <a href="#" class="links text-center d-block more_answers" data="{{ muro.id }}">{{ 'Ver m√°s respuestas'|trans }}</a>
        {% endif %}
    </div>
</div>